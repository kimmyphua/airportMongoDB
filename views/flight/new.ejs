<div class="container">
    <div class="row">
        <div class="col-4">
            <% flight.forEach(u => {%>
                <div class="bg-info p-3 m-3">
                    <p>Name of Flight: <%= u.name %></p>
                    <p>Departure : <%= u.from %></p>
                    <p>Arrival : <%= u.to %></p>
                </div>
            <% }) %>
        </div>
        <div class="col-6">
            <form action="/flight/create" method="post">
                <div class="row">
                    <input class="form-control" placeholder="name of flight" name="name"/>
                    <input class="form-control" placeholder="departure" name="from"/>
                    <input class="form-control" placeholder="arrival" name="to"/>
                    <input class="form-control" placeholder="airline" name="airline"/>

                        <p> Names of Passengers: <% passenger.forEach(u => {%>
                        <input type="checkbox" name="passenger" value="<%= u._id%>"><%= u.firstname %>  <%= u.lastname %>
                    <% })%></p>
                </div>
                <div class="row">
                    <button type="submit">Add Flight</button>
                </div>
            </form>
            <form action="/" class="mt-3 text-center">
                <button class="btn btn-light btn-outline-danger mb-2" type="submit">Return Home</button>
            </form>
        </div>
    </div>

</div>
