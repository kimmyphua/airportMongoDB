<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <% flight.forEach(u => {%>
                <div class=" bg-white p-3 m-3">
                    <p>Name of Flight: <%= u.name %></p>
                    <p>Name of Airline: <%= u.airline %></p>
                    <p>Departure : <%= u.from %></p>
                    <p>Arrival : <%= u.to %></p>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>

                        </tr>
                        </thead>

                        <% u.passenger.forEach((u,i) => {%>

                            <tbody>
                            <tr>
                                <th scope="row"><%= i+1%></th>
                                <td><%= u.firstname %></td>
                                <td><%= u.lastname %></td>
                            </tr>

                            </tbody>
                        <% }) %>
                    </table>
                </div>

            <% }) %>
        </div>
        <div class="col-6">
            <form action="/flight/create" method="post">
                <div class="row mx-2">
                    <label>FLIGHT: </label>
                    <input class="form-control mb-2" placeholder="name of flight" name="name"/>
                    <label>DEPARTURE: </label>
                    <input class="form-control mb-2" placeholder="departure" name="from"/>
                    <label>ARRIVAL: </label>
                    <input class="form-control mb-2" placeholder="arrival" name="to"/>
                    <label>AIRLINE: </label>
                    <input class="form-control mb-2" placeholder="airline" name="airline"/>


                </div>
                <div class=" text-center">

                    <button class="btn btn-light btn-outline-danger mb-2" type="submit">Add Flight</button>

                </div>
            </form>
<!--            <form action="/" class="mt-3 text-center">-->
<!--                <button class="btn btn-light btn-outline-danger mb-2" type="submit">Return Home</button>-->
<!--            </form>-->
        </div>
    </div>

</div>

